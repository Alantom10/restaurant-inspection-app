<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txtViolationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="30"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:text="@string/txtViolationDetail"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageViolation"
            app:layout_constraintTop_toTopOf="@+id/imageViolation" />

        <ImageView
            android:id="@+id/imageViolation"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageSeverity"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtViolationDetail"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="188dp"
            tools:layout_editor_absoluteY="77dp" />
</androidx.constraintlayout.widget.ConstraintLayout>